@require "./reset.styl";
@require "./perfect-scrollbar.styl";

$green = #249f89;
* {
	box-sizing: border-box;
	-moz-box-sizing: border-box;
}
html, body {
	width: 100%;
	height: 100%;
	position: relative;
	overflow: hidden;
	padding: 0;
	margin: 0;
	font-family: Roboto, Calibri, Helvetica, Open Sans;
}

body {
	background-color: #000;
}

.list {
	position: absolute;
	width: 300px;
	height: 100%;
	top: 0;
	left: 0;
	border-right: 1px solid $green;
}

ul {
	list-style: none;
	li {
		width: 100%;
		height: 80px;
		line-height: 80px;
		padding: 0 30px;
		
		position: relative;
		&::after {
			content: '';
			position: absolute;
			left: 50%;
			transform: translateX(-50%);
 			bottom: 0%;
			width: 60%;
			height: 1px;
			background-color: $green;
		}	
		a {
			color: $green;
			display: block;
			width: 100%;
			height: 100%;
			text-decoration: none;
			font-weight: 800;
			font-size: 12px;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			text-transform: uppercase;
			
			&::before {
				content: '';
				display: inline-block;
				width: 25px;
				height: 25px;
				border: 1px solid $green;
				border-radius: 50%;
				background: url('./play-pause.png') left 4px center no-repeat transparent;
				margin-right: 10px;
				position: relative;
				top: 8px;
				
			}
			
			&.playing::before {
				background-position: right 4px center;
			}
		}
	}	
}

.ps-container > .ps-scrollbar-y-rail > .ps-scrollbar-y {
	background-color: $green;
}

.berghain {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translateY(-50%) translateX(-50%);
	margin-left: 150px;
	width: 450px;
	height: 330px;
	background: url('./bg.png') center top no-repeat transparent;
}

.berghain canvas {
	position: relative;
	top: 60px;
	display: block;
	margin: 0 auto;
}

